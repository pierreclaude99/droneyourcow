<div class="col-12 col-sm-6 col-lg-8 mx-auto my-4">
  <%= link_to drone_path(drone), class: "text-decoration-none" do %>

    <div class="card rounded-lg p-3 shadow-sm flex-md-row text-dark">
    <% if drone.photo.attached? %>
        <%= cl_image_tag drone.photo.key, height: 170, width:170, crop: :fill %>
     <% else %>
     <%= cl_image_tag 'g8c8dewmyqqabmgffjsk1xbcnlcy', height: 170, width:170, crop: :fill  %>
    <% end %>
    <div class="pl-3 d-flex flex-column">
     <h3><%= drone.model %></h3>
     <ul class="list-unstyled list-inline">
       <li class="list-inline-item"><%= drone.autonomy %> min -</li>
       <li class="list-inline-item"><%= drone.maximum_distance %> km -</li>
       <li class="list-inline-item"><%= drone.carry_capacity %> kg</li>
     </ul>
     <p class="h3 list-inline-item"><%= drone.delivery_price %> â‚¬</p>

    <% if drone.user.photo.attached? %>
          <p><%= cl_image_tag drone.user.photo.key, class: "avatar mr-2" %>  <%= drone.user.name %> </p>
    <% else %>

          <p><%= image_tag "https://kitt.lewagon.com/placeholder/users/random", class: "avatar mr-2" %>  <%= drone.user.name %> </p>
    <% end %>

     </div>
    </div>
  <% end %>
</div>
