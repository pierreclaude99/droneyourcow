<h1>Liste des demandes de livraison en tant que loueur</h1>

<ul class="list-unstyled list-inline">
  <% @deliveries.each do |delivery| %>
    <% if delivery.user == current_user %>
    <ul>
      <li>
        <li class="list-inline-item"><%= delivery.delivery_address %></li>
        <li class="list-inline-item"><%= delivery.user.name %></li>
        <li class="list-inline-item"><%= delivery.delivery_time %></li>
        <li class="list-inline-item"><%= delivery.description %></li>
        <li class="list-inline-item"><%= delivery.status %></li>
      </li>
    </ul>
    <% end %>
  <% end %>
</ul>

