<div class="position-relative overflow-hidden p-3 p-md-5 m-0 text-center bg-light banner-hero text-white">
      <div class="col-md-5 p-lg-5 mx-auto">
        <h1> <b> Drone your cow</b></h1>
        <p class="lead font-weight-normal">Cow delivery wherever you want !</p>

                  <%= link_to "Ajouter un drone",  new_drone_path, class: "btn btn-primary btn-lg rounded-lg btn-block" %>

      </div>
      <div class="product-device box-shadow d-none d-md-block"></div>
      <div class="product-device product-device-2 box-shadow d-none d-md-block"></div>
</div>




<section id="drones">
  <div class="container">
    <div>
      <% @drones.each do |drone| %>

        <%= link_to drone_path(drone), class: "text-decoration-none" do %>
        <div class="col-6 mx-auto">
          <div class="row d-flex align-items-center bg-light p-3 my-4 text-dark hover-card ">
             <div class="col-4 p-0 m-0">
                <% if drone.photo.attached? %>
                    <%= cl_image_tag drone.photo.key, height: 200, width:200, crop: :fill, class: "rounded-lg img-fluid" %>
                 <% else %>
                 <%= cl_image_tag 'g8c8dewmyqqabmgffjsk1xbcnlcy', height: 200, width:200, crop: :fill, class: "rounded-lg img-fluid" %>
                <% end %>
              </div>

              <div class="col-8">
                <h3 class="h2"><%= drone.model %></h3>
                 <ul class="list-unstyled list-inline">
                   <li class="list-inline-item"><%= drone.autonomy %> min -</li>
                   <li class="list-inline-item"><%= drone.maximum_distance %> km -</li>
                   <li class="list-inline-item"><%= drone.carry_capacity %> kg</li>
                 </ul>
                 <p class="h3 list-inline-item"><%= drone.delivery_price %> €</p>
                <p><%= image_tag  "https://kitt.lewagon.com/placeholder/users/random", class: "avatar mr-2" %> Drone proposé par : <%= drone.user.name %></p>

              </div>
          </div>
        </div>

          <% end %>
      <% end %>
     </div>
  </div>
</section>
